@page "/verify"
@inject ApplicationService ApplicationService

<PageTitle>Verify Certificate - DICIS</PageTitle>

<div class="container" style="max-width: 600px; margin: 64px auto;">
    <div class="card" style="border: none; box-shadow: var(--shadow-lg);">
        <div class="card-header" style="background: linear-gradient(135deg, #0B6B3A 0%, #0A5A2F 100%); color: white; border: none; border-radius: var(--radius-md) var(--radius-md) 0 0;">
            <h2 style="margin: 0; color: white;">
                <i class="bi bi-shield-check" style="margin-right: 8px;"></i>
                Verify Certificate
            </h2>
        </div>
        <div class="card-body" style="padding: 40px;">
            <div style="margin-bottom: 32px;">
                <label class="form-label">
                    <i class="bi bi-upc-scan" style="margin-right: 8px;"></i>
                    Certificate ID
                </label>
                <div style="display: flex; gap: 12px;">
                    <input type="text" 
                           class="form-control" 
                           @bind="certificateId" 
                           placeholder="Enter Certificate ID" 
                           @onkeypress="HandleKeyPress" />
                    <button class="btn btn-secondary" @onclick="ScanQR" style="white-space: nowrap;">
                        <i class="bi bi-qr-code-scan" style="margin-right: 8px;"></i>
                        Scan QR
                    </button>
                </div>
                <small class="form-text">OR scan the QR code on the certificate</small>
            </div>
            
            <button class="btn btn-primary w-100" @onclick="VerifyCertificate" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                }
                <i class="bi bi-search" style="margin-right: 8px;"></i>
                Verify Certificate
            </button>

            @if (verificationResult != null)
            {
                <div style="margin-top: 32px;">
                    @if (verificationResult.IsValid)
                    {
                        <div class="card" style="background: #D1FAE5; border: 2px solid var(--color-success); border-radius: var(--radius-md);">
                            <div style="padding: 24px;">
                                <div style="display: flex; align-items: center; margin-bottom: 20px;">
                                    <div style="width: 48px; height: 48px; background: var(--color-success); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 16px;">
                                        <i class="bi bi-check-circle-fill" style="font-size: 24px; color: white;"></i>
                                    </div>
                                    <div>
                                        <h3 style="margin: 0; color: #065F46;">Certificate is Valid</h3>
                                        <span class="badge badge-approved">Verified</span>
                                    </div>
                                </div>
                                
                                <div style="background: white; padding: 20px; border-radius: var(--radius-md); margin-top: 16px;">
                                    <div style="margin-bottom: 12px;">
                                        <span class="caption" style="color: var(--color-text-secondary);">Full Name</span>
                                        <p style="margin: 4px 0 0 0; font-weight: 600;">@verificationResult.Name</p>
                                    </div>
                                    <div style="margin-bottom: 12px;">
                                        <span class="caption" style="color: var(--color-text-secondary);">State</span>
                                        <p style="margin: 4px 0 0 0; font-weight: 600;">@verificationResult.State</p>
                                    </div>
                                    <div style="margin-bottom: 12px;">
                                        <span class="caption" style="color: var(--color-text-secondary);">Local Government Area</span>
                                        <p style="margin: 4px 0 0 0; font-weight: 600;">@verificationResult.LGA</p>
                                    </div>
                                    <div style="margin-bottom: 12px;">
                                        <span class="caption" style="color: var(--color-text-secondary);">Issued Date</span>
                                        <p style="margin: 4px 0 0 0; font-weight: 600;">@verificationResult.IssuedAt?.ToString("dd MMMM yyyy")</p>
                                    </div>
                                    <div>
                                        <span class="caption" style="color: var(--color-text-secondary);">Status</span>
                                        <p style="margin: 4px 0 0 0;">
                                            <span class="badge badge-approved">@verificationResult.Status</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="card" style="background: #FEE2E2; border: 2px solid var(--color-error); border-radius: var(--radius-md);">
                            <div style="padding: 24px;">
                                <div style="display: flex; align-items: center; margin-bottom: 20px;">
                                    <div style="width: 48px; height: 48px; background: var(--color-error); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 16px;">
                                        <i class="bi bi-x-circle-fill" style="font-size: 24px; color: white;"></i>
                                    </div>
                                    <div>
                                        <h3 style="margin: 0; color: #991B1B;">Certificate is Invalid</h3>
                                        @if (verificationResult.IsRevoked)
                                        {
                                            <span class="badge badge-revoked">Revoked</span>
                                        }
                                    </div>
                                </div>
                                
                                <div style="background: white; padding: 20px; border-radius: var(--radius-md); margin-top: 16px;">
                                    <p style="margin: 0; color: var(--color-text-primary);">
                                        <i class="bi bi-exclamation-triangle" style="margin-right: 8px; color: var(--color-error);"></i>
                                        @verificationResult.Message
                                    </p>
                                    @if (verificationResult.IsRevoked && !string.IsNullOrEmpty(verificationResult.RevocationReason))
                                    {
                                        <div style="margin-top: 16px; padding-top: 16px; border-top: 1px solid var(--color-border);">
                                            <span class="caption" style="color: var(--color-text-secondary);">Revocation Reason</span>
                                            <p style="margin: 4px 0 0 0;">@verificationResult.RevocationReason</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

@code {
    private string certificateId = string.Empty;
    private CertificateVerifyResponse? verificationResult;
    private bool isLoading = false;

    private async Task VerifyCertificate()
    {
        if (string.IsNullOrEmpty(certificateId))
        {
            return;
        }

        isLoading = true;
        verificationResult = null;

        try
        {
            verificationResult = await ApplicationService.VerifyCertificateAsync(certificateId);
        }
        catch (Exception ex)
        {
            verificationResult = new CertificateVerifyResponse
            {
                IsValid = false,
                Message = $"Error: {ex.Message}"
            };
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await VerifyCertificate();
        }
    }

    private async Task ScanQR()
    {
        // QR scanner functionality would be implemented here
        // For now, show a message
        // In production, this would open device camera for QR scanning
        await Task.CompletedTask;
    }
}
