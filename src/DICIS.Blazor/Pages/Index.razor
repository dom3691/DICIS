@page "/"
@inject AuthService AuthService

<PageTitle>Home - DICIS</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1>Digital Indigene Certificate Issuance System</h1>
            <p class="lead">Get your indigene certificate in minutes, not days.</p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Fast & Automated</h5>
                    <p class="card-text">Get your certificate in 2-5 minutes with automated verification.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Digital Verification</h5>
                    <p class="card-text">Verify certificates instantly using QR codes or certificate ID.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Secure & Transparent</h5>
                    <p class="card-text">End-to-end encryption and immutable audit logs.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12 text-center">
            <a href="/apply" class="btn btn-primary btn-lg">Apply Now</a>
            <a href="/verify" class="btn btn-outline-primary btn-lg ms-2">Verify Certificate</a>
        </div>
    </div>
</div>
