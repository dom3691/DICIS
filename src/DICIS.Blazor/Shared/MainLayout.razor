@inherits LayoutView

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <div class="ms-auto">
                @if (IsAuthenticated)
                {
                    <span class="me-3">Welcome, @UserName</span>
                    <button class="btn btn-sm btn-outline-secondary" @onclick="Logout">Logout</button>
                }
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    [CascadingParameter]
    private bool IsAuthenticated { get; set; }
    
    [CascadingParameter]
    private string? UserName { get; set; }
    
    private void Logout()
    {
        // Implement logout logic
    }
}
